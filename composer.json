{
    "name": "ahmedmashhour/laravel-query-debugger",
    "description": "Automatic query tracking, analysis, and debugging for Laravel applications with N+1 detection, slow query monitoring, and performance insights",
    "keywords": ["laravel", "query", "debug", "performance", "n+1", "database", "monitoring"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ahmed Mashhour",
            "email": "ahmedmashhour505@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "illuminate/database": "^10.0",
        "illuminate/http": "^10.0",
        "illuminate/console": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "QueryDebugger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "QueryDebugger\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "QueryDebugger\\QueryDebuggerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
